<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef2ea">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/logo1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline26">

        <TextView
            android:id="@+id/txtid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ID:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtBname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Baby Name:  "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="476dp" />

        <TextView
            android:id="@+id/txtBday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Birthday: "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-13dp"
            tools:layout_editor_absoluteY="520dp" />

        <TextView
            android:id="@+id/txtBtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Type:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-13dp"
            tools:layout_editor_absoluteY="520dp" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Gender:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-13dp"
            tools:layout_editor_absoluteY="520dp" />

        <TextView
            android:id="@+id/txtWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Weight:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="561dp" />/>

        <TextView
            android:id="@+id/txtHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Height:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="561dp" />

        <TextView
            android:id="@+id/txtBplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth Place:   "
            android:textColor="#769F9A"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="561dp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>